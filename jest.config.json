{
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "globals": {
    "ts-jest": {
      "tsconfig": "./tsconfig.json",
      "module": "ES6"
    }
  },
  "testMatch": [
    "**/test/**/*.ts?(x)",
    "**/?(*.)+(spec|test).ts?(x)",
    "!**/dist/**/*"
  ]
}